@model SacramentPlanner.Models.Planner

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Planner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SacramentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SacramentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ward)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Presiding)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Presiding)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conducting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conducting)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Benediction)
        </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Benediction)
       </dd>
        
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Speaker</th>
                </tr>
                @foreach (var item in Model.Speakers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PlannerID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
