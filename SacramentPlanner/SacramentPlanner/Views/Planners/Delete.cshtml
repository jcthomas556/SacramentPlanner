@model SacramentPlanner.Models.Planner

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Planner</h4>
    <hr />
    <dl class="row">
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.SacramentDate)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.SacramentDate)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Ward)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Ward)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Presiding)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Presiding)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Conducting)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Conducting)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Invocation)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Invocation)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Benediction)
       </dt>
       <dd class="col-sm-10">
          @Html.DisplayFor(model => model.Benediction)
       </dd>
       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Speakers)
       </dt>

       <dd class="col-sm-10">
          <table class="table">
             <tr>
                <th>Name</th>

             </tr>
             @foreach (var item in Model.Speakers)
             {
                <tr>
                   <td>
                      @Html.DisplayFor(modelItem => item.Name)
                   </td>
                </tr>
             }


          </table>
       </dd>

       <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Hymns)
       </dt>

       <dd class="col-sm-10">
          <table class="table">
             <tr>
                <th>Title</th>

             </tr>
             @foreach (var item in Model.Hymns)
             {
                <tr>
                   <td>
                      @Html.DisplayFor(modelItem => item.Title)
                   </td>
                </tr>
             }


          </table>
       </dd>


    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlannerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
